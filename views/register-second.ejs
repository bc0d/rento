<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Rento-Register</title>

    <% include partials/extlinks %>

</head>

<body>
    <!-- ##### Breadcumb Area Start ##### -->
    <div class="breadcumb_area bg-img" style="background-image: url(img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="page-title text-center">
                        <h2>Registration</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Breadcumb Area End ##### -->

    <!-- ##### Checkout Area Start ##### -->
    <div class="checkout_area section-padding-80">
        <div class="container">
            <div class="row">

                <div class="col-12 col-md-10 ml-5">
                    <div class="checkout_details_area mt-50 clearfix">

                        <div class="cart-page-heading mb-30">
                            <h5>Step 2</h5>
                        </div>

                        <form action="/register2" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="id" value="<%=userid%>">
                            <div class="row">
                                 <div class="col-12 mb-3">
                                     <label for="file">Photo</label>
                                     <input type="file" name="user_pic" class="form-control" id="pic1" required>
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="file">ID [front]</label>
                                    <input type="file" name="id_front" class="form-control" id="id1" required>
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="file">ID [back]</label>
                                    <input type="file" name="id_back" class="form-control" id="id2" required>
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="street_address">Address <span>*</span></label>
                                    <textarea class="form-control" name="address" rows="5" required></textarea>
                                </div>
                                <div class="col-12 mb-3">
                                    <label for="">Privilege <span>*</span></label> 
                                     <select class="w-100" id="category" name="user_cat" required>
                                        <option>-select-</option>
                                        <option value="r">Renter</option>
                                        <option value="b">Buyer</option>
                                    </select>
                                </div>
                                
                                 <div class="col-12 mb-3 ml-5 mt-5">
                                        <input class="btn essence-btn" type="submit" value="Register">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- ##### Checkout Area End ##### -->
    <!-- ##### Footer Area start ##### -->
    <% include partials/foothidden %>
    <!-- ##### Footer Area End ##### -->

    <!-- jQuery (Necessary for All JavaScript Plugins) -->
    <script src="js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="js/active.js"></script>

</body>

</html>