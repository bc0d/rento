<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title  -->
    <title>Rento</title>

    <% include partials/extlinks %>    
    <!-- style map-->
    <style type="text/css">
        
    </style>
    <!-- style map end-->


</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <% include partials/clienthead %>
    <!-- ##### Header Area End ##### -->
    <!-- ##### Checkout Area Start ##### -->
    <div class="checkout_area section-padding-80">
        <div class="container">
            <div class="row">

                <div class="col-12 col-md-10 ml-5">
                    <form action="/renttrans" method="post">
                    <div class="order-details-confirmation">

                        <div class="cart-page-heading">
                            <h5>Your Product</h5>
                            <p>The Details</p>
                        </div>
                        <input type="hidden" name="rent_prd" value="<%=rnt_prd%>">
                        <%
                            pdtcart.forEach(function(pdtcart) {
                        %>
                        <ul class="order-details-form mb-4">
                            <li><span>Product Name</span> <span><%=pdtcart.pdt_name%></span></li>
                            <li><span>Rent Amount</span> <span><%=pdtcart.rent_amt%></span></li>
                            <li><span>Max Rent Period </span> <span><%=pdtcart.max_rent_prd%></span></li>
                            
                        </ul>

                        <div id="accordion" role="tablist" class="mb-4">
                            <div class="card">
                                <div class="card-header" role="tab" id="headingOne">
                                    <h6 class="mb-0">
                                        <a data-toggle="collapse" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne"><i class="fa fa-circle-o mr-3"></i>Description</a>
                                    </h6>
                                </div>

                                <div id="collapseOne" class="collapse" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
                                    <div class="card-body">
                                        <p><%=pdtcart.descr%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header" role="tab" id="headingTwo">
                                    <h6 class="mb-0">
                                        <a class="collapsed" data-toggle="collapse" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo"><i class="fa fa-circle-o mr-3"></i>Instructions</a>
                                    </h6>
                                </div>
                                <div id="collapseTwo" class="collapse" role="tabpanel" aria-labelledby="headingTwo" data-parent="#accordion">
                                    <div class="card-body">
                                        <p><%=pdtcart.instr%></p>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header" role="tab" >
                                    <h6 class="mt-4">
                                        <input type="radio" name="tandc" value="accept">Terms&amp;Conditions
                                    </h6>
                                </div>
                            </div>
                            
                          <div class="mt-3 ml-5">
                            <input type="hidden" name="pid" value="<%=pdtcart.prod_id%>">
                            <input type="submit" class="btn essence-btn" value="Confirm">
                         </div>
                    </div>
                    <%
                        });
                    %>
                </div>
                    </form>
                </div>
        </div>
    </div>
    <!-- ##### Checkout Area End ##### -->

    <!-- ##### Footer Area Start ##### -->
    <% include partials/clientfoot %>
    <!-- ##### Footer Area End ##### -->

    <!-- jQuery (Necessary for All JavaScript Plugins) -->
    <script src="js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="js/plugins.js"></script>
    <!-- Classy Nav js -->
    <script src="js/classy-nav.min.js"></script>
    <!-- Active js -->
    <script src="js/active.js"></script>
   

</body>

</html>